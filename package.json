{
  "name": "oasis-wallet",
  "version": "0.0.0-development",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Esya/oasis-wallet.git"
  },
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "build": "INLINE_RUNTIME_CHUNK=false react-scripts build",
    "test": "TZ=UTC react-scripts test --silent",
    "eject": "react-scripts eject",
    "test:generators": "ts-node --project=./internals/ts-node.tsconfig.json ./internals/testing/generators/test-generators.ts",
    "start:prod": "yarn run build && serve -s build",
    "checkTs": "tsc --noEmit",
    "eslint": "eslint --ext js,ts,tsx",
    "lint": "yarn run eslint src",
    "lint:fix": "yarn run eslint --fix src",
    "lint:css": "stylelint src/**/*.css",
    "generate": "cross-env TS_NODE_PROJECT='./internals/ts-node.tsconfig.json' plop --plopfile internals/generators/plopfile.ts",
    "cleanAndSetup": "ts-node --project=./internals/ts-node.tsconfig.json ./internals/scripts/clean.ts",
    "prettify": "prettier --write",
    "extract-messages": "i18next-scanner --config=internals/extractMessages/i18next-scanner.config.js",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/vendors/**/*",
      "!src/**/*/*.d.ts",
      "!src/**/*/Loadable.{js,jsx,ts,tsx}",
      "!src/**/*/messages.ts",
      "!src/**/*/types.ts",
      "!src/index.tsx"
    ]
  },
  "nyc": {
    "exclude": [
      "src/vendors",
      "**/vendors/**"
    ],
    "excludeAfterRemap": true,
    "report-dir": "cypress-coverage"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-webusb": "6.11.2",
    "@oasisprotocol/client": "0.1.0-alpha7",
    "@oasisprotocol/ledger": "0.2.1",
    "@reduxjs/toolkit": "1.6.2",
    "base64-arraybuffer": "1.0.1",
    "bech32": "2.0.0",
    "bip39": "3.0.4",
    "body-scroll-lock": "4.0.0-beta.0",
    "chalk": "4.1.2",
    "connected-react-router": "6.9.1",
    "copy-to-clipboard": "3.3.1",
    "cross-env": "7.0.3",
    "fontfaceobserver": "2.1.0",
    "grommet": "2.19.1",
    "grommet-icons": "4.6.2",
    "husky": "7.0.4",
    "i18next": "20.6.1",
    "i18next-browser-languagedetector": "6.1.2",
    "portable-fetch": "3.0.0",
    "prettier": "2.4.1",
    "qrcode.react": "1.0.1",
    "react": "17.0.2",
    "react-app-polyfill": "2.0.0",
    "react-data-table-component": "6.11.8",
    "react-dom": "17.0.2",
    "react-helmet-async": "1.1.2",
    "react-i18next": "11.12.0",
    "react-redux": "7.2.6",
    "react-router-dom": "5.3.0",
    "react-scripts": "4.0.3",
    "react-test-renderer": "17.0.2",
    "react-transition-group": "4.4.2",
    "redux-injectors": "1.3.0",
    "redux-saga": "1.1.3",
    "replace-in-file": "6.3.2",
    "rimraf": "3.0.2",
    "styled-components": "5.3.1",
    "tweetnacl": "1.0.3",
    "typed-redux-saga": "1.3.1",
    "typescript": "4.3.5",
    "valid-url": "1.0.9",
    "web-vitals": "2.1.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.11",
    "@cypress/instrument-cra": "1.4.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@testing-library/cypress": "8.0.1",
    "@testing-library/jest-dom": "5.15.0",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/body-scroll-lock": "3.1.0",
    "@types/fontfaceobserver": "2.1.0",
    "@types/jest": "27.0.2",
    "@types/jest-when": "2.7.3",
    "@types/node": "16.11.6",
    "@types/node-fetch": "3.0.3",
    "@types/react": "17.0.34",
    "@types/react-dom": "17.0.11",
    "@types/react-redux": "7.1.20",
    "@types/react-router-dom": "5.3.2",
    "@types/react-test-renderer": "17.0.1",
    "@types/rimraf": "3.0.2",
    "@types/shelljs": "0.8.9",
    "@types/styled-components": "5.1.15",
    "@types/testing-library__jest-dom": "5.14.1",
    "@types/valid-url": "1.0.3",
    "@types/webpack": "5.28.0",
    "@types/webpack-env": "1.16.3",
    "cypress": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "i18next-scanner": "3.1.0",
    "i18next-scanner-typescript": "1.0.6",
    "inquirer": "8.2.0",
    "inquirer-directory": "2.2.0",
    "jest-styled-components": "7.0.5",
    "jest-when": "3.4.2",
    "lint-staged": "11.2.6",
    "node-plop": "0.26.3",
    "plop": "2.7.6",
    "postinstall-postinstall": "2.1.0",
    "redux-saga-test-plan": "4.0.3",
    "sanitize.css": "13.0.0",
    "semantic-release": "18.0.0",
    "serve": "12.0.1",
    "shelljs": "0.8.4",
    "stylelint": "14.0.1",
    "stylelint-config-recommended": "6.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "ts-node": "10.4.0"
  },
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.4.1"
  },
  "husky(remove-everything-in-these-parentheses.See-the-issue-#29)": {
    "hooks": {
      "pre-commit": "yarn run checkTs && lint-staged"
    }
  }
}
